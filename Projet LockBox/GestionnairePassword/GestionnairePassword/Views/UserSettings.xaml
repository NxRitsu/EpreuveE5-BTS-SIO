        <Frame HeightRequest="45" Margin="-10,0,0,0" Padding="0" HasShadow="True" BorderColor="#337df4"  HorizontalOptions="FillAndExpand">
            <Entry x:Name="OldPassword" IsPassword="True" Placeholder="Ancien mot de passe" />
