<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GestionnairePassword.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GestionnairePassword.Views">

    <TabBar>
        <ShellContent
            Title="Accueil"
            Icon="home.svg"
            ContentTemplate="{DataTemplate views:LoginCredentialListPage}"
            Route="LoginCredentialListPage" />
        <ShellContent
            Title="Générateur"
            Icon="generateur.svg"
            ContentTemplate="{DataTemplate views:Générateur}"
            Route="Générateur" />
        <ShellContent
            Title="Paramètre"
            Icon="setting.svg"
            ContentTemplate="{DataTemplate views:UserSettings}"
            Route="UserSettings" />
    </TabBar>

</Shell>
